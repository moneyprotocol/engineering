{
  "name": "moneyprotocol",
  "private": true,
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/web3-eth-abi/@ethersproject/abi",
      "**/@graphprotocol/*",
      "**/jest*",
      "**/@babel/*",
      "**/babel*",
      "**/react-scripts"
    ]
  },
  "scripts": {
    "build": "pnpm -r build",
    "build:dev-frontend": "pnpm --filter @moneyprotocol/dev-frontend build",
    "build:subgraph": "pnpm --filter @moneyprotocol/subgraph build",
    "deploy": "pnpm --filter @moneyprotocol/lib-ethers run hardhat deploy",
    "deploy:testnet": "pnpm deploy --network testnet",
    "docs": "run-s docs:*",
    "docs:collect-sdk-apis": "node scripts/collect-sdk-apis.js",
    "docs:api-documenter": "api-documenter generate -i temp/sdk-apis -o docs/sdk",
    "fuzzer": "pnpm --filter @moneyprotocol/fuzzer fuzzer",
    "prepare": "run-s prepare:*",
    "prepare:contracts": "pnpm --filter @moneyprotocol/contracts run prepare",
    "prepare:lib-base": "pnpm --filter @money-protocol/lib-base prepare",
    "prepare:lib-ethers": "pnpm --filter @moneyprotocol/lib-ethers prepare",
    "prepare:lib-react": "pnpm --filter @moneyprotocol/lib-react prepare",
    "prepare:lib-subgraph": "pnpm --filter @moneyprotocol/lib-subgraph prepare",
    "prepare:providers": "pnpm --filter @moneyprotocol/providers prepare",
    "prepare:subgraph": "pnpm --filter @moneyprotocol/subgraph prepare",
    "prepare:docs": "run-s docs",
    "rebuild": "run-s prepare build",
    "release": "run-s release:*",
    "release:lib-base": "pnpm --filter @money-protocol/lib-base semantic-release",
    "release:lib-ethers": "pnpm --filter @moneyprotocol/lib-ethers semantic-release",
    "save-live-version": "pnpm --filter @moneyprotocol/lib-ethers save-live-version",
    "start-rsk": "run-s start-rsk:*",
    "start-rsk:regtest": "node dev-chain/start-rsk.js",
    "start-rsk:prepare-providers": "pnpm run prepare:providers",
    "start-rsk:deploy-contracts": "pnpm run deploy --network regtest",
    "stop-rsk": "docker kill regtest-node-01",
    "start-dev-chain": "run-s start-dev-chain:*",
    "start-dev-chain:openethereum": "node dev-chain/start.js",
    "start-dev-chain:prepare-providers": "pnpm run prepare:providers",
    "start-dev-chain:deploy-contracts": "pnpm run deploy --network dev",
    "start-dev-chain:prepare-lib-ethers": "pnpm run prepare:lib-ethers",
    "stop-dev-chain": "docker kill openethereum",
    "start-dev-frontend": "pnpm --filter @moneyprotocol/dev-frontend start",
    "start-demo": "run-s start-demo:*",
    "start-demo:dev-chain": "pnpm start-dev-chain",
    "start-demo:dev-frontend": "pnpm --filter @moneyprotocol/dev-frontend start-demo",
    "stop-demo": "pnpm run stop-dev-chain",
    "test": "run-s test:*",
    "test:lib-base": "pnpm --filter @money-protocol/lib-base test",
    "test:lib-ethers": "pnpm --filter @moneyprotocol/lib-ethers test",
    "test:dev-frontend": "run-s --continue-on-error test:dev-frontend:*",
    "test:dev-frontend:start-dev-chain": "pnpm run start-dev-chain",
    "test:dev-frontend:run": "pnpm --filter @moneyprotocol/dev-frontend test --watchAll=false --forceExit --detectOpenHandles",
    "test:dev-frontend:stop-dev-chain": "pnpm run stop-dev-chain",
    "test-contracts": "pnpm --filter @moneyprotocol/contracts test",
    "test-live": "run-s test-live:*",
    "test-live:lib-ethers": "pnpm --filter @moneyprotocol/lib-ethers test-live",
    "coverage": "run-s coverage:*",
    "coverage:contracts": "pnpm --filter @moneyprotocol/contracts coverage"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@microsoft/api-documenter": "^7.12.6",
    "fs-extra": "^9.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "semantic-release": "^17.4.2",
    "semantic-release-monorepo": "^7.0.4"
  }
}
