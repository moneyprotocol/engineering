{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@money-protocol/lib-base": ["../../packages/lib-base"],
      "@money-protocol/lib-ethers": ["../../packages/lib-ethers"],
      "@money-protocol/providers": ["../../packages/providers"],
      "@moneyprotocol/*": ["../../packages/*"]
    }
  },
  "include": ["src"]
}
